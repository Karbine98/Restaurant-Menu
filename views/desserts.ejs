<% include partials/header %>


<style>

    .content{
        float: right;
    }

    .navbar-nav {
      flex-direction: row;
    }
    
    .nav-link {
      padding-right: .5rem !important;
      padding-left: .5rem !important;
    }
    
    .ml-auto .dropdown-menu {
      left: auto !important;
      right: 0px;
    }
    
    .nav-logo{
        width: 20%; 
        height: 100%;
        margin-bottom: 0%;
        margin-right: 0%;
        margin-left: 0%;
        padding-right: 0%;
    }

    h3{
        color: floralwhite;
    }

    .logo{
        margin-right: 10%;
    }

</style>

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="navbar w-100 order-1 order-md-0">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/starters">Starters</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/mains">Main Course</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/desserts">Desserts</a>
                </li>
            </ul>
        </div>
        <div class="mx-auto order-0">
            <a class="navbar-brand mx-auto"  href="/">GRAMERCY TAVERN</a>
        </div>
        <div class="navbar w-100 order-3">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" target="_blank" href="https://docs.google.com/forms/d/1GKO_2fa9_vGytQpwMjSaZWs3qQc1o7GQS8pYQGG4Sww/edit">Contact</a>
                </li>
            </ul>
        </div>
</nav>

<div class="container">
    <header class="jumbotron">
        <img style="width: 35%" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPO3OM3w2WL-_IGTg2mKwC1pDHm2_PwFZRTI_6P5MVqb1Sj-7c" />
        <div class="content">
                <h1>GRAMARCY TAVERN</h1>
                <p>LEGACY OF NYC.</p>
               
        </div>   
        <br>
        <br>
        <P>
                <a class="btn btn-primary" href="https://www.gramercytavern.com/" target="_blank">Original Site</a>
        </P>
        
    </header>
    <br>
    <form class="col text-center" action="/desserts/new">
        <button type="submit" class="btn btn-success">Add a new one!</button>
    </form>
    <hr>
    <br>
    <div class="row" style="display:flex; flex-wrap: wrap;">
        <% desserts.forEach(function(dessert){ %>
            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= dessert.image %>">
                </div>
                <div class="caption">
                    <h3><%= dessert.name %></h3>
                    
                </div>
                
            </div>
            
        <% }); %>
    </div> 
   
    <hr>
    <% include partials/footer %>
</div>

